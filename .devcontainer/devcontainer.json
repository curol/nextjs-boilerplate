{
  "name": "nextjs-boilerplate",
  "image": "ghcr.io/curol/devcontainers/js-pnpm:latest",
  "remoteUser": "vscode",
  "forwardPorts": [
    3000,
    3001,
    9229
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dsznajder.es7-react-js-snippets",
        "VisualStudioExptTeam.vscodeintellicode",
        "VisualStudioExptTeam.intellicode-api-usage-examples",
        "foxundermoon.shell-format",
        "timonwong.shellcheck",
        "mads-hartmann.bash-ide-vscode",
        "eamodio.gitlens",
        "christian-kohler.npm-intellisense",
        "bradlc.vscode-tailwindcss",
        "unifiedjs.vscode-mdx",
        "bierner.markdown-mermaid"
      ]
    }
  },
  "mounts": [
    "source=commandhistory,target=/commandhistory,type=volume"
  ],
  // For remote host
  "workspaceMount": "source=${localWorkspaceFolderBasename},target=/workspaces/${localWorkspaceFolderBasename},type=volume",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "onCreateCommand": "sudo chown -R vscode:vscode /workspaces"
}